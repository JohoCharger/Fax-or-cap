<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Fax or Cap?</title>
    <link rel="stylesheet" href="feed/feed.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.min.css">
    <script src="http://accounts.google.com/gsi/client" async></script>
    <meta http-equiv="Content-Security-Policy" content="script-src 'self' http://accounts.google.com/gsi/client">
</head>
<body>
    <!-- header -->
    <div class="sticky-top">
        <nav class="navbar bg-dark navbar-expand-md navbar-dark">
            <div class="container">
                <a class="navbar-brand text-white fs-3 me-3" href="#">Fax or cap</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item my-auto">
                            <a class="nav-link text-white" href="#">
                                <i class="bi bi-plus-square"></i>
                                New Post
                            </a>
                        </li>
                        <li class="nav-item">
                            <% if (profile) {%>
                            <a class="nav-link text-white" href="/profile">
                                <img id="profile-picture" src="<%= profile.img_link%>" alt="profile-picture">
                                    Profile
                            </a>
                            <% } else { %>
                            <a class="nav-link text-white" href="/auth/sign_in">
                                <i class="bi bi-at"></i>
                                    Sign in
                            </a>
                            <% } %>
                        </li>
                    </ul>
                    <!-- Search, implement later
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>-->
                </div>
            </div>
        </nav>
    </div>

    <!-- posts -->
    <div class="container-md justify-content-center  cards-container" id="card-list">
        <% if(posts){ %>
        <% posts.forEach(post => { %>
        <div class="card bg-dark rounded-4 m-3">
            <div class="card-body">
                <h5 class="card-title text-light fs-3">
                    <i class="bi bi-person-circle me-2"></i>
                    <span class="author"><%= post.author %></span>
                    <span class="card-text text-secondary fs-5 time">路 <%= post.time_since %> ago 路</span>
                    <span class="fax-button btn btn-dark text-light py-1 px-3 fs-5">FAX</span>
                    <span class="cap-button btn btn-dark text-light py-1 px-3 fs-5">CAP</span>
                </h5>
                <div class="card-text text-light fs-4">
                    <span class="content"><%= post.content %></span>
                </div>
            </div>
        </div>
        <% });} %>
    </div>

    <script id="post-template" type="text/template">
        <div class="card bg-dark rounded-4 m-3">
            <div class="card-body">
                <h5 class="card-title text-light fs-3">
                    <i class="bi bi-person-circle me-2"></i>
                    <span class="author"></span>
                    <span class="time card-text text-secondary fs-5">路 {time} ago 路</span>
                    <span class="fax-button btn btn-dark text-light py-1 px-3 fs-5">FAX</span>
                    <span class="cap-button btn btn-dark text-light py-1 px-3 fs-5">CAP</span>
                </h5>
                <div class="card-text text-light fs-4">
                    <span class="content"></span>
                </div>
            </div>
        </div>
    </script>

    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="feed/feed.js"></script>
</body>
</html>